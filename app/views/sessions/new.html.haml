%h1.span-22.dark-blue.last log-in
.span-22.center.last
	- flash.each do |name, msg|
		= content_tag :div, msg, :id => "flash_#{name}"

	= form_tag sessions_path do
		%p
			= label_tag :email
			%br/
			= text_field_tag :email, params[:email]
		%p
			= label_tag :password
			%br/
			= password_field_tag :password
		%p.button= submit_tag "Log in"
