.header
  .container
    = link_to image_tag('fish_logo.png'), root_path
    .nav-bar
      .buttle-medium
        %h3
          -if current_user
            = link_to 'log out', :log_out
            |
            = link_to 'dashboard', :dashboard
            |
          -else
            = link_to 'log in', :log_in
            |
            = link_to 'sign up', :sign_up
            |
          = link_to 'explore tests', beta_tests_path
          |
          = link_to 'about', :about
          |
          = link_to 'contact', :contact
    .release-info
      %h3.color-5
        ( early adopter / alpha release )
