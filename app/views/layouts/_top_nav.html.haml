.top-container
  %h3
    -if current_controller == 'beta_tests'
      info
    -else
      =link_to 'info', current_beta_test
  %h3
    -if current_controller == 'blogs'
      blog
    -else
      =link_to 'blog', blogs_path
  %h3
    -if ['forum_categories', 'forum_topics', 'forum_posts'].index(current_controller)
      forums
    -else
      =link_to 'forums', forum_categories_path
  %h3
    -if current_controller == 'surveys'
      surveys
    -else
      =link_to 'surveys', surveys_path
  %h3
    -if current_controller == 'leaders'
      leaders
    -else
      =link_to 'leaders', leaders_path(current_beta_test)
  %h3
    -if current_controller == 'tickets'
      tickets
    -else
      =link_to 'tickets', ticket_categories_path
