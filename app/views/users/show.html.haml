%h1.dark-blue= @user.name + "'s profile"
%h3.dark-blue
  member since
  = @user.created_at.to_date.to_formatted_s(:long_ordinal)
%hr
- if @user.has_role? :developer
  %h3.dark-blue my betta tests
  %table
    - @user.beta_tests.each do |test|
      %tr
        %td= link_to test.name, controller => :test, :action => :show, :id => test.id
        %td
          = test[:members].count
          members
- else
  %h3.dark-blue no betta tests hosted
  = link_to 'start one', controller => :betta_test, :action => :new
  %br
  %br
%hr
- if @user.has_role? :tester
  %h3.dark-blue betta tests I&#39;m a member of
  %table
    - @user.tester_stat_sheets.each do |membership|
      %tr
        %td
          = link_to membership[:test].name, membership
        %td
          status:
          = membership[:status]
- else
  %h3.dark-blue not subscribed to any betta tests
  = link_to 'find one', controller => :betta_test, :action => :new
  %br
  %br
%hr
- if @user == @current_user || @current_user.has_role?(:admin)
  = link_to 'preferences', edit_user_path(@user)
